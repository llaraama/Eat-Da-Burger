<div class="container">
  <h1>Eat-Da-Burger!</h1>  

  <div class="container intro"> 
    <form class="create-update-form" action="/" method="POST">
      <div class="form-group">
        <label for="ca">Enter a burger you want to eat Click the "Submit" button below.</label><br>
        <input type="text" id="burger" name="name">
        <button type="submit" class="btn btn-success btn-sm">Submit</button>
      </div>
    </form>
  </div> 
<br>

<div class="center">
  <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Burgers to Eat!</h3>
    </div>
    <div class="panel-body">
      <ul style="list-style-type:none;">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              {{this.id}}<span>(</span>
              {{this.name}}

              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devour" value="true">
                <button type="submit" class="btn btn-warning btn-sm">Devour!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>



  <div class="panel panel-default col-md-5" style="padding: 0px">
    <div class="panel-heading">
      <h3>Devoured Burgers!</h3>
    </div>
    <div class="panel-body">
      <ul style="list-style-type:none;">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}<span>(</span>
              {{this.name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>  
</div>
</div>


